<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".HomeFragment" android:id="@+id/homeFragment">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/homeRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/no_recipes"
            android:layout_width="1843dp"
            android:layout_height="158dp" android:id="@+id/emptyTxt" android:textColor="@android:color/black"
            tools:visibility="gone" android:textSize="14sp" android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.41"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/refreshButton" app:backgroundTint="@color/colorPrimary"
            app:rippleColor="@android:color/white"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="@+id/homeRecyclerView"
            android:layout_marginRight="20dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/homeRecyclerView" app:maxImageSize="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>